<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:baselineAligned="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent" >

        <TextView
            android:textSize="25sp"
            android:text="Welcome to Beehive Mobile"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="wrap_content" />

        <ImageView
            android:id="@+id/iv_beehive_logo"
            android:src="@drawable/new_beehive_logo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:contentDescription="Beehive Logo" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:padding="5dp"
        android:layout_width="match_parent" >

        <TextView
            android:id="@+id/tv_continue_response"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_welcome_code"
            android:hint="enter experiment code"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_welcome_continue"
            android:text="Connect to Study"
            android:background="@color/colorPrimary"
            android:textColor="@color/gray"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
